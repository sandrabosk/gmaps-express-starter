<h3>Edit {{restaurant.name}}</h3>
<form action="/restaurants/{{restaurant._id}}" method="POST">
  <label>Name:</label>
  <input 
    type="text" 
    name="name" 
    value="{{restaurant.name}}"
  />
  <label>Description:</label>
  <textarea name="description"> {{restaurant.description}} </textarea>
  <label>Address</label>
  <input 
    type="text" 
    name="latitude" 
    id="latitude" 
    placeholder="latitude" 
    value="{{restaurant.location.coordinates.[1]}}"
  />
  <input 
    type="text" 
    name="longitude" 
    id="longitude" 
    placeholder="longitude" 
    value="{{restaurant.location.coordinates.[0]}}"
  />

  <button type="submit" name="" id="submit">Save changes</button>
</form>